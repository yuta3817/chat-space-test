      .LeftHeader__userName
        = current_user.name
      .LeftHeader__iconList
        .LeftHeader__leftIcon
          = link_to '/groups/new' do
            = icon('fas', 'edit')
        .LeftHeader__rightIcon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .GroupList__group
        = link_to '#' do
          .GroupList__group-name 
            = group.name
